{
	"name": "cspuz-solver2 dev",
	"image": "mcr.microsoft.com/devcontainers/typescript-node:1-22-bookworm",
	"forwardPorts": [5173],
	"mounts": [
		"source=../cspuz_core,target=/workspaces/cspuz_core,type=bind,readonly",
		"source=${localWorkspaceFolderBasename}-node_modules,target=${containerWorkspaceFolder}/node_modules,type=volume"
	],
	"postCreateCommand": "sudo chown -R node:node ${containerWorkspaceFolder}/node_modules",
	"customizations": {
		"vscode": {
			"extensions": [
				"GitHub.copilot",
				"GitHub.copilot-chat"
			]
		}
	}
}
